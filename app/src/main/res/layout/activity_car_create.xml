<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.interaje.revendavendedor.activities.CarCreateActivity">

    <TextView
        android:id="@+id/tv_cadastrar_carro"
        android:text="Cadastrar Carro:"
        android:textSize="25dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_car_create_name"
        android:textSize="20dp"
        android:hint="Nome do carro"
        android:layout_below="@+id/tv_cadastrar_carro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_car_create_year"
        android:textSize="20dp"
        android:hint="Ano de fabricação"
        android:inputType="number"
        android:layout_below="@+id/et_car_create_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_car_create_price"
        android:textSize="20dp"
        android:hint="Preço do veículo"
        android:inputType="numberDecimal"
        android:layout_below="@id/et_car_create_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_car_create"
        android:textSize="20dp"
        android:text="Cadastrar"
        android:layout_below="@id/et_car_create_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
